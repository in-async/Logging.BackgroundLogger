<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net461;netstandard2.0;netstandard2.1</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Authors>inasync</Authors>
    <Description>A Library that provides an ILoggerProvider implementation that posts log messages to any room in Chatwork.</Description>
    <PackageProjectUrl>https://github.com/in-async/Logging.Chatwork</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/in-async/Logging.Chatwork/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>library logging chatwork</PackageTags>
    <Version>0.3.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Configuration" Version="3.1.0" />
  </ItemGroup>

</Project>
